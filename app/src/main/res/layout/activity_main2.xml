<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/manos"

        android:layout_width="wrap_content"
        android:layout_height="255dp"
        android:src="@drawable/manos"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movil"
        android:layout_below="@id/manos"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/texto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-68dp"
        android:textColor="#000"
        android:text="23"
        android:textAlignment="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGENIOUS WAYS TO WORK SMARTER, NOT HARDER"
        android:textSize="40dp"
        android:textColor="#000"
        android:background="@drawable/marco"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>